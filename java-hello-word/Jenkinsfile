pipeline { 
    agent any
    stages {
        stage('Check Workspace & Compile Java') {
            steps {
                script {
                    sh 'echo "Current Directory:" && pwd'   // Check current directory
                    sh 'echo "Listing files:" && ls -l'     // Check if HelloWorld.java is present
                    sh 'javac HelloWorld.java'              // Compile Java file
                }
            }
        }
        stage('Run Java Program') {
            steps {
                script {
                    sh 'echo "Running Java Program..."'
                    sh 'java HelloWorld'
                }
            }
        }
    }
}
